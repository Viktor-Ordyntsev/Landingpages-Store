#ansible-managed
################

server {
  	listen {{ nginx_port }};
	server_name {{ server_name }};
	root /var/apps/{{ server_name }};

	location ~ ^/(scripts.*js|styles|images) {
		gzip_static on;
		expires 1y;
		add_header Cache-Control public;
		add_header ETag "";

		break;
	}

	location / {
		try_files $uri /index.html;
	}
}
